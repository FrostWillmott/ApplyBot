# ApplyBot Environment Configuration
# Copy this file to .env and fill in your values

# HH.ru OAuth credentials (get from https://dev.hh.ru)
HH_CLIENT_ID=your_client_id_here
HH_CLIENT_SECRET=your_client_secret_here
HH_REDIRECT_URI=http://localhost:8000/auth/callback

# Anthropic API key (for Claude LLM)
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Database configuration
POSTGRES_USER=postgres
POSTGRES_PASSWORD=change_this_password
POSTGRES_DB=applybot

# Redis configuration (optional)
REDIS_URL=redis://redis:6379/0

# Application settings
LOG_LEVEL=INFO

# Scheduler settings
SCHEDULER_ENABLED=true
