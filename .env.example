# HeadHunter API credentials
# Get them at https://dev.hh.ru/admin
HH_CLIENT_ID=your_client_id_here
HH_CLIENT_SECRET=your_client_secret_here
HH_REDIRECT_URI=http://localhost:8000/auth/callback

# LLM API keys (at least one required for cover letters)
ANTHROPIC_API_KEY=your_anthropic_key_here
# OPENAI_API_KEY=your_openai_key_here

# Database
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_DB=applybot
DATABASE_URL=postgresql+asyncpg://${POSTGRES_USER}:${POSTGRES_PASSWORD}@db:5432/${POSTGRES_DB}

# Redis
REDIS_URL=redis://redis:6379/0

# Application settings
LOG_LEVEL=INFO

# Scheduler settings
SCHEDULER_ENABLED=true
SCHEDULER_AUTO_START=true
SCHEDULER_DEFAULT_HOUR=10
SCHEDULER_DEFAULT_MINUTE=0
SCHEDULER_DEFAULT_DAYS=mon,tue,wed,thu,fri
SCHEDULER_DEFAULT_TIMEZONE=Europe/Moscow
SCHEDULER_MAX_APPLICATIONS=50
