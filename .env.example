# =============================================================================
# ApplyBot Environment Configuration
# =============================================================================
# Copy this file to .env and fill in your values:
#   cp .env.example .env
# =============================================================================

# -----------------------------------------------------------------------------
# HeadHunter OAuth 2.0
# -----------------------------------------------------------------------------
# Get credentials at: https://dev.hh.ru/admin
# Create an application and copy Client ID and Client Secret

HH_CLIENT_ID=your_hh_client_id_here
HH_CLIENT_SECRET=your_hh_client_secret_here
HH_REDIRECT_URI=http://localhost:8000/auth/callback

# -----------------------------------------------------------------------------
# Anthropic API (Claude)
# -----------------------------------------------------------------------------
# Get your API key at: https://console.anthropic.com/
# Used for AI-powered cover letter generation and screening questions

ANTHROPIC_API_KEY=sk-ant-api03-your_key_here
LLM_PROVIDER=sonnet4

# -----------------------------------------------------------------------------
# Database (PostgreSQL)
# -----------------------------------------------------------------------------
# Connection string format: postgresql+asyncpg://user:password@host:port/database
# For Docker: use 'db' as host (service name from docker-compose)
# For local: use 'localhost'

DATABASE_URL=postgresql+asyncpg://postgres:postgres@db:5432/applybot

# For local development without Docker:
# DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/applybot

# -----------------------------------------------------------------------------
# Redis (Task Queue)
# -----------------------------------------------------------------------------
# Used for background job processing
# For Docker: use 'redis' as host (service name from docker-compose)

REDIS_URL=redis://redis:6379/0

# For local development without Docker:
# REDIS_URL=redis://localhost:6379/0

# -----------------------------------------------------------------------------
# Logging (Optional)
# -----------------------------------------------------------------------------
# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
# Default: INFO

LOG_LEVEL=INFO

# -----------------------------------------------------------------------------
# PostgreSQL Container Settings (Docker only)
# -----------------------------------------------------------------------------
# These are used by the PostgreSQL container in docker-compose

POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=applybot
