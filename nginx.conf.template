server {
    listen 80;
    server_name localhost;

    # Serve static files
    location / {
        root /usr/share/nginx/html;
        index index.html;
        try_files $uri $uri/ /index.html;
    }

    # Proxy API requests to the backend
    # This works for both development and production environments
    # The backend service is determined by the BACKEND_SERVICE environment variable
    location ~ ^/(auth|apply|api|health) {
        # Use resolver to handle Docker DNS
        resolver 127.0.0.11;

        # Proxy to the backend service specified by environment variable
        proxy_pass http://${BACKEND_SERVICE}:80;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
    }
}