FROM nginx:alpine

# Copy static files to nginx html directory
COPY app/static /usr/share/nginx/html

# Copy nginx config template and entrypoint script
COPY nginx.conf.template /etc/nginx/conf.d/default.conf.template
COPY docker-entrypoint.sh /docker-entrypoint.sh

# Make the entrypoint script executable
RUN chmod +x /docker-entrypoint.sh

EXPOSE 80

# Set default value for BACKEND_SERVICE if not provided
ENV BACKEND_SERVICE=app

# Use the entrypoint script to generate the nginx config
ENTRYPOINT ["/docker-entrypoint.sh"]
CMD ["nginx", "-g", "daemon off;"]
